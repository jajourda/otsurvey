//navbar
.navbar-parent{
  //sub specific
  &#navbar-main{
    .navbar-brand{
      padding:6px;
    }
  }
  .navbar-logo {
    //same width as the font-size of the logo icon
    width:12rem;
    .chart-icon-logo{
      //change the line-height
      line-height: $g;
      padding-top: $q;
    }
  }
  .navbar-inverse.first-nav .navbar-nav > .active > a{
    background:$blue;
  }
  .navbar-inverse{
    border:none;
    &.first-nav{
      background:$m-blue;
      //background specific dynamic styles
      &.back-blue{
        background:$m-blue;
        .navbar-nav > .active > a{
          background:$blue;
        }
        //links
        .navbar-nav a{
          color:$white;
        }
        //logo
        .navbar-logo .chart-icon-logo{
          color:$white;
        }
      }
      &.back-red{
        background:$m-red;
        .navbar-nav > .active > a{
          background:$red;
        }
        //links
        .navbar-nav a{
          color:$white;
        }
        //logo
        .navbar-logo .chart-icon-logo{
          color:$white;
        }
      }
      &.back-green{
        background:$m-green;
        .navbar-nav > .active > a{
          background:$green;
        }
        //links
        .navbar-nav a{
          color:$black;
        }
        //logo
        .navbar-logo .chart-icon-logo{
          color:$black;
        }
      }
      &.back-yellow{
        background:$m-yellow;
        .navbar-nav > .active > a{
          background:$yellow;
        }
        //links
        .navbar-nav a{
          color:$black;
        }
        //logo
        .navbar-logo .chart-icon-logo{
          color:$black;
        }
      }
    }
    &.second-nav{
      background:$m-blue;
      //background specific dynamic styles
      &.back-blue{
        background:$m-blue;
        .navbar-nav > .active > a{
          background:$blue;
        }
        //links
        .navbar-nav a{
          color:$white;
        }
        //logo
        .navbar-logo .chart-icon-logo{
          color:$white;
        }
      }
      &.back-red{
        background:$m-red;
        .navbar-nav > .active > a{
          background:$red;
        }
        //links
        .navbar-nav a{
          color:$white;
        }
        //logo
        .navbar-logo .chart-icon-logo{
          color:$white;
        }
      }
      &.back-green{
        background:$m-green;
        .navbar-nav > .active > a{
          background:$green;
        }
        //links
        .navbar-nav a{
          color:$black;
        }
        //logo
        .navbar-logo .chart-icon-logo{
          color:$black;
        }
      }
      &.back-yellow{
        background:$m-yellow;
        .navbar-nav > .active > a{
          background:$yellow;
        }
        //links
        .navbar-nav a{
          color:$black;
        }
        //logo
        .navbar-logo .chart-icon-logo{
          color:$black;
        }
      }
    }
    
    .navbar-nav li a{
      font-weight: 600;
      color:white;
    }
  }
  .navbar-header{
    button.navbar-toggle{
      margin-top: 0;
      margin-bottom: 0;
      padding-top: 0;
      padding-bottom: 0;
      height:5rem;
      &:focus, &:hover{
        background:none;
      }
    }
    .mobile-nav-logo{
      font-size: 8rem;
      line-height: 5rem;
    }
  }
  .navbar-collapse{
    border-top: 0;
  }

}

.first-nav{
  .container{
    // padding: 0;
    // margin-left: 0;
    // margin-right: 0;
  }
  #first-nav{
    margin: 0 auto;
    display: table;
    table-layout: fixed;
    float:right;
  }
}


.second-nav{
  #second-nav{
    margin: 0 auto;
    display: table;
    table-layout: fixed;
    float:none;
  }
}

